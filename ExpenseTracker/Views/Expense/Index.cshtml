@model IEnumerable<Expense>


@{
	ViewData["Title"] = "List Of Expenses";
}

@if (TempData["ResultOk"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@TempData["ResultOk"]</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}

<div class="container shadow p-5">

    <h1 class="text-center mb-3"> List of Expenses </h1>

    <div class="col mb-3">
        <div class="text-white ">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-success ">Add Expense</a>
        </div>
    </div>
    <table class="table table-bordered table-hover text-center">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(Model => Model.E_Title)</th>
                <th scope="col">@Html.DisplayNameFor(Model => Model.E_Description)</th>
                <th scope="col">@Html.DisplayNameFor(Model => Model.E_Date)</th>
                <th scope="col">@Html.DisplayNameFor(Model => Model.E_Amount)</th>
                <th scope="col">@Html.DisplayNameFor(Model => Model.Category.C_Name)</th>
                <th> Action </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @Html.DisplayFor(modelItem => item.E_Title)
                    </td>
                    <td width="20%">
                        @Html.DisplayFor(modelItem => item.E_Description)
                    </td>
                    <td width="25%">
                        @Html.DisplayFor(modelItem => item.E_Date)
                    </td>
                    <td width="25%">
                        @Html.DisplayFor(modelItem => item.E_Amount)
                    </td>
                    <td width="25%">
                        @Html.DisplayFor(modelItem => item.Category.C_Name)
                    </td>

                    <td>
                        <div role="group" class="w-60 btn-group">
                            <a asp-controller="Expense" asp-action="Edit" asp-route-id="@item.E_Id" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>&nbsp;
                            <a asp-controller="Expense" asp-action="Delete" asp-route-id="@item.E_Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>